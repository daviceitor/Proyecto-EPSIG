<%= javascript_include_tag "jquery-1.4.3.min.js" %>
<%= javascript_include_tag "jquery-ui-1.8.6.custom.min.js" %>
<%= stylesheet_link_tag "smoothness/jquery-ui-1.8.6.custom.css" %>
<%= javascript_include_tag "application.js" %>

<div class="content">

  <div class="content-header">
    <p style="color: green"><%= notice %></p>
    <h2 class="title">Operaciones</h2>
  </div>
  <div class="content-body">
    <% form_tag generate_csv_operations_path, :method => :get do -%>
      <dl>
        <dt>Responsable:</dt> <dd><%= select_tag  "idUsuario", options_for_select(@responsables), :id => "idUsuario", :class => "filter" %></dd>
        <dt>Estado:</dt> <dd><%= select_tag  "idEstado", options_for_select(@estados), :id => "idEstado", :class => "filter" %></dd>
        <dt>Fecha inicio:</dt> <dd><%= text_field_tag  "inicio", "", :id => "inicio", :class => "filter" %></dd>
        <dt>Fecha fin:</dt> <dd><%= text_field_tag  "fin", "", :id => "fin", :class => "filter" %></dd>
      </dl>
      <div style="clear:both"><%= submit_tag "Generar CSV" %></div>
    <% end -%>
    <div class="actions"></div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready (function(){
    $('#inicio').datepicker({dateFormat: 'dd/mm/yy'})
    $('#fin').datepicker({dateFormat: 'dd/mm/yy'})
  });
</script>
