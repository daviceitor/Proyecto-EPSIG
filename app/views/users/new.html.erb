<div class="content">

  <div class="content-header">
    <p style="color: green"><%= notice %></p>
    <h2 class="title">Nuevo usuario</h2>
  </div>
  <div class="content-body">

    <% @user.password = @user.password_confirmation = nil %>

    <%= error_messages_for :user %>
    <% form_for :user, :url => users_path do |f| -%>

      <dl>
        <dt><%= f.label :name %></dt>
        <dd><%= f.text_field :name %></dd>

        <dt><%= f.label :email %></dt>
        <dd><%= f.text_field :email %></dd>

        <dt><%= f.label :role %></dt>
        <dd><%= f.select :role, get_rols_for_select %></dd>

        <dt><%= f.label :password %></dt>
        <dd><%= f.password_field :password %></dd>

        <dt><%= f.label :password_confirmation %></dt>
        <dd><%= f.password_field :password_confirmation %></dd>

      </dl>

      <div class="actions">
        <%= image_tag('save.png') %>
        <%= f.submit 'Crear usuario', :class => "submit" %>
        <%= image_tag("cancel.png")%> <%= link_to 'Volver', users_path %>
      </div>
    
    <% end -%>
  </div>
</div>