<%= stylesheet_link_tag 'login.css' %>

<div class="login-header">
  <%= link_to image_tag("logo.png"), "http://intranet.mvconsultoria.es", :class => "logo" %>
</div>

<div class="login">
<h1>¿Olvido su contraseña?</h1>
<p class="error center"><%= @error %></p>
<% form_tag '/forgot_password', :method => :post do -%>

<p><%= label_tag :email %><br/>
<%= text_field_tag :email %></p>

<p><%= submit_tag 'Enviar' %></p>
<%= link_to "Volver", new_session_path %>
<% end -%>
</div>