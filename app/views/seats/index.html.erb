<h1>Listing seats</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Postalcode</th>
  </tr>

<% @seats.each do |seat| %>
  <tr>
    <td><%=h seat.name %></td>
    <td><%=h seat.street %></td>
    <td><%=h seat.city %></td>
    <td><%=h seat.state %></td>
    <td><%=h seat.country %></td>
    <td><%=h seat.postalcode %></td>
    <td><%= link_to 'Show', seat %></td>
    <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
    <td><%= link_to 'Destroy', seat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New seat', new_seat_path %>